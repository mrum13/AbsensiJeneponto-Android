<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceActivity"
    android:paddingVertical="16dp"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absen hari ini"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/img_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_apel_pagi"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Apel Pagi"
        android:background="@drawable/button_primary"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        android:layout_marginTop="52dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_absen_masuk"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Apel Masuk"
        android:background="@drawable/button_primary"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        android:layout_marginTop="52dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_apel_sore"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Apel Sore"
        android:background="@drawable/button_primary"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_apel_pagi"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_absen_pulang"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Apel Pulang"
        android:background="@drawable/button_primary"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_absen_masuk"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>