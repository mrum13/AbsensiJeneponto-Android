<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistFaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/scan_header">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:padding="8dp"
            app:tint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Wajah"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/layout_camera"
        app:layout_constraintTop_toBottomOf="@id/scan_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/camera_selfie"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_scan1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lepaskan Kacamata"
        app:layout_constraintTop_toBottomOf="@id/layout_camera"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_scan2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lepaskan Masker"
        app:layout_constraintTop_toBottomOf="@id/tv_scan1"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_scan3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lepaskan Topi"
        app:layout_constraintTop_toBottomOf="@id/tv_scan2"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_scan4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_scan3"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/red"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_scan5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_scan4"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/blue"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="20dp"
        android:text="Daftar"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>